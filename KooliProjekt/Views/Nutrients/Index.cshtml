@model KooliProjekt.Models.NutrientsIndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form method="get">
    <div class="form-group">
        <label class="control-label">Name:</label>
        <input type="text" name="Name" class="form-control" value="@Model?.Search?.Name" />
    </div>
    <div class="form-group">
        <label class="control-label">Sugar:</label>
        <div class="row">
            <div class="col-md-6">
                <input type="number" name="MinSugar" class="form-control" placeholder="Min" value="@Model?.Search?.MinSugar" />
            </div>
            <div class="col-md-6">
                <input type="number" name="MaxSugar" class="form-control" placeholder="Max" value="@Model?.Search?.MaxSugar" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label">Fat:</label>
        <div class="row">
            <div class="col-md-6">
                <input type="number" name="MinFat" class="form-control" placeholder="Min" value="@Model?.Search?.MinFat" />
            </div>
            <div class="col-md-6">
                <input type="number" name="MaxFat" class="form-control" placeholder="Max" value="@Model?.Search?.MaxFat" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label">Carbohydrates:</label>
        <div class="row">
            <div class="col-md-6">
                <input type="number" name="MinCarbohydrates" class="form-control" placeholder="Min" value="@Model?.Search?.MinCarbohydrates" />
            </div>
            <div class="col-md-6">
                <input type="number" name="MaxCarbohydrates" class="form-control" placeholder="Max" value="@Model?.Search?.MaxCarbohydrates" />
            </div>
        </div>
    </div>
    <div class="form-group">
        <button class="btn btn-primary">Search</button>
        <a asp-action="Index" class="btn btn-secondary">Reset</a>
    </div>
</form>

@if (Model?.Data?.Results != null && Model.Data.Results.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Sugar</th>
                <th>Fat</th>
                <th>Carbohydrates</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data.Results)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Sugar</td>
                    <td>@item.Fat</td>
                    <td>@item.Carbohydrates</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @(await Component.InvokeAsync<PagerViewComponent>(Model.Data))
}
else
{
    <p>No nutrients found.</p>
}
